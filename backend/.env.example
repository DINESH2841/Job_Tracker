# Backend Environment Variables

# === FOR LOCAL DEVELOPMENT ===
NODE_ENV=development
PORT=4000

# MongoDB Connection
MONGODB_URI=mongodb://localhost:27017/job-tracker
# For MongoDB Atlas (Production):
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/job-tracker?retryWrites=true&w=majority

# JWT Secret (generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))")
JWT_SECRET=generate-a-strong-secret-32-chars-minimum
JWT_EXPIRES_IN=7d

# Google OAuth 2.0
GOOGLE_CLIENT_ID=YOUR_GOOGLE_CLIENT_ID.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=YOUR_GOOGLE_CLIENT_SECRET
# For Local Development:
GOOGLE_REDIRECT_URI=http://localhost:4000/auth/callback
# For Production:
# GOOGLE_REDIRECT_URI=https://api.yourdomain.com/auth/callback

# Frontend URL (for CORS and redirects)
FRONTEND_URL=http://localhost:3000
# For Production:
# FRONTEND_URL=https://job-tracker.yourdomain.com

# CORS Origin
CORS_ORIGIN=http://localhost:3000
# For Production, set to your frontend domain
# CORS_ORIGIN=https://job-tracker.yourdomain.com
