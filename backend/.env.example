# Backend Environment Variables
# Copy these to Render dashboard for the backend service

# Node Environment
NODE_ENV=production
PORT=4000

# Database (MongoDB Atlas)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/job-tracker?retryWrites=true&w=majority

# JWT Secret (generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))")
JWT_SECRET=your-random-32-char-secret-here

# Google OAuth 2.0
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=https://api.dineshsevinni.me/auth/callback

# Frontend URL (for CORS and redirects)
FRONTEND_URL=https://job-tracker.dineshsevinni.me
VITE_API_URL=http://localhost:4000

# === BACKEND (Express) ===
PORT=4000
NODE_ENV=development
JWT_SECRET=generate-a-strong-secret-32-chars-minimum
JWT_EXPIRES_IN=7d
CORS_ORIGIN=http://localhost:3000
FRONTEND_URL=http://localhost:3000

# Google OAuth
GOOGLE_CLIENT_ID=YOUR_GOOGLE_CLIENT_ID
GOOGLE_CLIENT_SECRET=YOUR_GOOGLE_CLIENT_SECRET
# For Local Development (npm run dev):
# GOOGLE_REDIRECT_URI=http://localhost:4000/api/gmail/callback
# For Production (Render/Backend API):
GOOGLE_REDIRECT_URI=https://your-domain.com/api/auth/callback/google

# Firebase Admin SDK
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_CLIENT_EMAIL=your-service-account@your-project.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----\n"
