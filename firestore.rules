rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      match /applications/{applicationId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      
      match /gmail_accounts/{accountId} {
         allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    // Worker Registry (Phase 1.1 Foundation)
    match /workers/{workerId} {
      allow read: if request.auth != null; // Visible to authenticated users for monitoring
      allow write: if false; // Only backend service accounts should write (enforced by Admin SDK)
    }
    
    // Default deny
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
