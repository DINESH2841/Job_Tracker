rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if false; // client cannot write root user doc

      match /applications/{applicationId} {
        allow read: if request.auth != null && request.auth.uid == userId;
        allow update: if request.auth != null && request.auth.uid == userId; // Allow status updates
        allow create: if false; // created only by backend via sync
        allow delete: if false; // do not allow deletion yet
      }
      
      match /gmail_accounts/{accountId} {
         allow read: if request.auth != null && request.auth.uid == userId;
         allow write: if false; // backend only (tokens stored here)
      }
    }

    // Default deny
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
