// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  password      String?
  emailVerified DateTime?
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  gmailAccounts GmailAccount[]
  applications  JobApplication[]
  resumes       Resume[]
  reminders     Reminder[]
  accounts      Account[]
  sessions      Session[]

  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

model GmailAccount {
  id            String   @id @default(cuid())
  userId        String
  email         String
  accessToken   String   @db.Text
  refreshToken  String   @db.Text
  tokenExpiry   DateTime
  enabled       Boolean  @default(true)
  lastSyncAt    DateTime?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  user         User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  applications JobApplication[]

  @@unique([userId, email])
  @@map("gmail_accounts")
}

model JobApplication {
  id                String   @id @default(cuid())
  userId            String
  gmailAccountId    String?
  messageId         String?
  
  // Extracted fields
  companyName       String
  jobRole           String
  applicationDate   DateTime
  applicationSource String?
  status            ApplicationStatus @default(APPLIED)
  
  // Referral information
  hasReferral       Boolean  @default(false)
  referralName      String?
  referralPlatform  String?
  referralNotes     String?  @db.Text
  
  // Confidence scores
  companyConfidence ConfidenceLevel @default(HIGH)
  roleConfidence    ConfidenceLevel @default(HIGH)
  dateConfidence    ConfidenceLevel @default(HIGH)
  
  // Email data
  emailSubject      String?
  emailSender       String?
  emailBody         String?  @db.Text
  emailLink         String?
  
  // Manual override
  manuallyEdited    Boolean  @default(false)
  needsReview       Boolean  @default(false)
  
  notes             String?  @db.Text
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  user          User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  gmailAccount  GmailAccount?     @relation(fields: [gmailAccountId], references: [id], onDelete: SetNull)
  timeline      ApplicationTimeline[]
  resumes       ApplicationResume[]
  reminders     Reminder[]

  @@map("job_applications")
}

model ApplicationTimeline {
  id             String    @id @default(cuid())
  applicationId  String
  eventType      TimelineEventType
  status         ApplicationStatus?
  description    String
  eventDate      DateTime  @default(now())
  metadata       Json?
  createdAt      DateTime  @default(now())

  application JobApplication @relation(fields: [applicationId], references: [id], onDelete: Cascade)

  @@map("application_timeline")
}

model Resume {
  id          String   @id @default(cuid())
  userId      String
  fileName    String
  fileUrl     String
  version     String?
  uploadDate  DateTime @default(now())
  fileSize    Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user         User                @relation(fields: [userId], references: [id], onDelete: Cascade)
  applications ApplicationResume[]

  @@map("resumes")
}

model ApplicationResume {
  id             String @id @default(cuid())
  applicationId  String
  resumeId       String
  createdAt      DateTime @default(now())

  application JobApplication @relation(fields: [applicationId], references: [id], onDelete: Cascade)
  resume      Resume         @relation(fields: [resumeId], references: [id], onDelete: Cascade)

  @@unique([applicationId, resumeId])
  @@map("application_resumes")
}

model Reminder {
  id             String   @id @default(cuid())
  userId         String
  applicationId  String
  reminderDate   DateTime
  reminderType   ReminderType
  message        String
  completed      Boolean  @default(false)
  notified       Boolean  @default(false)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  user        User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  application JobApplication @relation(fields: [applicationId], references: [id], onDelete: Cascade)

  @@map("reminders")
}

enum ApplicationStatus {
  APPLIED
  PHONE_SCREEN
  INTERVIEW
  TECHNICAL_INTERVIEW
  FINAL_INTERVIEW
  OFFER
  REJECTED
  WITHDRAWN
  ACCEPTED
}

enum ConfidenceLevel {
  HIGH
  MEDIUM
  LOW
}

enum TimelineEventType {
  APPLICATION_SUBMITTED
  STATUS_UPDATED
  EMAIL_RECEIVED
  INTERVIEW_SCHEDULED
  FOLLOW_UP_SENT
  MANUAL_NOTE
}

enum ReminderType {
  FOLLOW_UP
  INTERVIEW
  DEADLINE
  CUSTOM
}
